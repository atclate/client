#!/bin/sh

# Init file for collectd

case "$1" in
'start')
	/opt/tpkg/sbin/collectd
	;;

'stop')
	if [ -f /opt/tpkg/var/run/collectd.pid ]
	then
		kill `cat /opt/tpkg/var/run/collectd.pid`
		rm -f /opt/tpkg/var/run/collectd.pid
	fi
	;;

'restart')
	$0 stop
	$0 start
	;;
*)
	echo "Usage: $0 { start | stop | restart }"
	exit 1
	;;
esac
exit 0

