#!/bin/sh
set -e
set -u

PKG=ruby
VER=1.9.3-p125
PKGVER=1
prefix=/opt/tpkg/$PKG-1.9
OSMAJOR=`facter | grep lsbmajdistrelease | cut -d' ' -f3`
ARCH=`facter hardwaremodel`

for i in ncurses readline zlib openssl gdbm
do
	pkg=$i-devel
	rpm --quiet -q $pkg || sudo yum install $pkg
done

rm -rf $PKG-$VER
tar zxvf $PKG-$VER.tar.gz

cd $PKG-$VER
o="--prefix=$prefix"
o="$o --disable-rpath"
./configure $o
make

pkgdir=`mktemp -d -t tpkg.XXXXXX`
sed -e "s/NAME/$PKG/" \
	-e "s/VERSION/$VER/" \
	-e "s/PKGVER/$PKGVER/" \
	-e "s/OS/RedHat-$OSMAJOR,CentOS-$OSMAJOR/" \
	-e "s/ARCH/$ARCH/" \
	-e "/file/d" \
	-e "/path/d" \
	-e "/init/d" \
	< ../../tpkg.xml > $pkgdir/tpkg.xml

# Install
make install DESTDIR=$pkgdir/root
# Make package
tpkg --make $pkgdir
# Cleanup
rm -rf $pkgdir
cd ..
rm -rf $PKG-$VER
